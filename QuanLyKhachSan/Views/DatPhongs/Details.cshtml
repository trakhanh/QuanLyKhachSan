@model QuanLyKhachSan.Models.DatPhong

@{
    ViewData["Title"] = "Details";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span><span class="text-muted fw-light"> Đặt Sảnh /</span> Chi tiết</h4>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label">Tên Khách Hàng</label>
                <p class="form-control" >@Html.DisplayFor(model => model.MaKhachHangNavigation.HoTen)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Sảnh</label>
                <p class="form-control" >@Html.DisplayFor(model => model.MaPhongNavigation.TenPhong)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Ngày Thuê</label>
                <p class="form-control" >@Html.DisplayFor(model => model.NgayBatDau)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Ngày Trả</label>
                <p class="form-control" >@Html.DisplayFor(model => model.NgayKetThuc)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Số Ngày</label>
                <p class="form-control" >@Html.DisplayFor(model => model.SoNgayThue)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Tổng Tiền</label>
                <p class="form-control" >@Html.DisplayFor(model => model.ThanhTien)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Nhân Viên</label>
                <p class="form-control" >@Html.DisplayFor(model => model.MaNhanVienNavigation.HoTen)</p>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Trạng Thái</label>
                <p class="form-control" >@Html.DisplayFor(model => model.MaTrangThaiNavigation.TenTrangThai)</p>
            </div>
        </div>
        <div class="mt-2">
            <a type="submit" asp-action="Edit" asp-route-id="@Model.MaDatPhong" class="btn btn-primary me-2">Sửa</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Trở Về</a>
        </div>
    </div>
</div>